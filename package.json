{
  "name": "spotify-app",
  "version": "1.0.0",
  "main": "index.js",
  "engines": {
    "node": "16.14.2"
  },
  "cacheDirectories": [
    "node_modules",
    "client/node_modules"
  ],
  "scripts": {
    "start": "concurrently --kill-others-on-fail \"yarn server\" \"yarn client\"",
    "server": "nodemon index.js",
    "client": "cd client && yarn start",
    "postinstall": "cd client && yarn install",
    "build": "NODE_ENV=production cd client && yarn install && yarn build",
    "start-server": "node index.js"
  },
  "license": "MIT",
  "dependencies": {
    "axios": "^0.26.1",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "yarn": "^1.22.19"
  },
  "devDependencies": {
    "concurrently": "^7.1.0",
    "nodemon": "^2.0.15"
  }
}
